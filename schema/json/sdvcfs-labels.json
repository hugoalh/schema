{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"title": "Software Development Version Control Forge Software Labels",
	"description": "JSON schema for software development version control forge software labels, compatible with most kind of labels manager.",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"name": {
				"type": "string",
				"description": "Name of the label.",
				"minLength": 1,
				"pattern": "^(?:[^\\s].*)?[^\\s]$"
			},
			"color": {
				"type": "string",
				"description": "Colour of the label.",
				"pattern": "^#?[\\dA-Fa-f]{6}$"
			},
			"colour": {
				"type": "string",
				"description": "(Alternative) Colour of the label.",
				"pattern": "^#?[\\dA-Fa-f]{6}$"
			},
			"description": {
				"type": "string",
				"description": "Description of the label.",
				"minLength": 1,
				"pattern": "^(?:[^\\s].*)?[^\\s]$"
			},
			"exclusive": {
				"type": "boolean",
				"description": "Whether the label is mutually exclusive to the labels with the same scope.",
				"default": false
			},
			"is_archived": {
				"type": "boolean",
				"description": "Whether the label is archived.",
				"default": false
			},
			"aliases": {
				"type": "array",
				"description": "Aliases of the label.",
				"items": {
					"type": "string",
					"description": "Alias of the label.",
					"minLength": 1,
					"pattern": "^(?:[^\\s].*)?[^\\s]$"
				},
				"uniqueItems": true
			}
		},
		"required": [
			"name",
			"color"
		]
	},
	"uniqueItems": true
}
